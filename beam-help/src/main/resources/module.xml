    <categories>System,Help</categories>

    <dependency>
        <module>beam-ui</module>
    </dependency>

    <extension point="beam-ui:helpSets">
        <helpSet>
            <id>beam-help</id>
            <path>doc/help/beam.hs</path>
        </helpSet>
    </extension>

</module>